<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    tools:context=".SignUp" >

    <TextView
        android:id="@+id/signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@layout/activity_sign_up"
        android:layout_alignLeft="@layout/activity_sign_up"
        android:paddingTop="10dp"
        android:textSize="20sp"
        android:text="@string/signnup" />
    <TextView    
        android:id = "@+id/goneText"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/signup"
        android:layout_alignLeft="@layout/activity_sign_up"
        android:paddingTop="10dp"
        />

    <TextView
        android:id="@+id/first_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/first_name_edit"
        android:paddingTop="10dp"
        android:text="@string/first_name"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/first_name_edit"
        android:layout_width="match_parent"
        android:hint="First Name"
        android:layout_height="wrap_content"
        android:layout_below="@id/goneText"
        android:layout_toRightOf="@id/first_name"
        android:inputType="textPersonName"
         />

    <TextView
        android:id="@+id/last_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/first_name"
        android:layout_below="@id/first_name"
        android:paddingTop="15dp"
        android:text="@string/last_name"
        android:gravity="top"
        android:textSize="20sp" />

       <EditText
           android:id="@+id/last_name_edit"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:paddingTop="15dp"
           android:hint="Last Name"
           android:layout_below="@id/first_name"
           android:layout_toRightOf="@id/last_name"
           android:inputType="textPersonName"
           android:gravity="bottom"
            />

        <TextView
            android:id="@+id/Phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/first_name"
            android:layout_alignTop="@+id/phone_edit"
            android:gravity="center"
            android:paddingTop="10dp"
            android:text="@string/Phone"
            android:textSize="20sp" />
       
        <EditText
           android:id="@+id/phone_edit"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@id/last_name_edit"
           android:hint="Phone"
           android:layout_toRightOf="@id/Phone"
           android:layout_alignLeft="@id/last_name_edit"
           android:inputType="phone"
            />
          <TextView
            android:id="@+id/Email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below ="@id/Phone"
            android:layout_alignLeft="@id/first_name"
            android:gravity="center"
            android:paddingTop="12dp"
            android:text="@string/email"
            android:textSize="20sp" />
          
		<EditText
           android:id="@+id/email_edit_text"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@id/phone_edit"
           android:hint="Email"
           android:layout_toRightOf="@id/Email"
           android:layout_alignLeft="@id/last_name_edit"
           android:inputType="textWebEmailAddress"
          />
     <TextView
            android:id="@+id/Password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below ="@id/Email"
            android:layout_alignLeft="@id/first_name"
            android:gravity="center"
            android:paddingTop="12dp"
            android:text="Password"
            android:textSize="20sp" />
          
		<EditText
           android:id="@+id/password_edit_text"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@id/email_edit_text"
           android:hint="Password"
           android:layout_toRightOf="@id/Password"
           android:layout_alignLeft="@id/last_name_edit"
           android:inputType="textPassword"
          />
		<Button
		    android:id="@+id/register"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentRight="true"
		    android:layout_below="@+id/Password"
		    android:layout_marginRight="14dp"
		    android:layout_marginTop="17dp"
		    android:text="@string/signnup" />

		
</RelativeLayout>